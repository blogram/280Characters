{
  "name": "TweetDeck in #280Characters",
  "short_name": "#280Characters",
  "version": "1.0.5",
  "manifest_version": 2,
  "description": "Enables 280-character tweets on TweetDeck for everyone.",
  "homepage_url": "https://github.com/blogram/280Characters",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "https://tweetdeck.twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://tweetdeck.twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["tweetdeck.js", "twitter.js"],
  "applications": {
    "gecko": {
      "id": "tweetdeck280@blogram.net"
    }
  }
}
